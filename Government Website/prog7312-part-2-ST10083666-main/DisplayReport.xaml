<Window x:Class="PROG7312_POEPART1_ST10083666.DisplayReport" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reported Issues" 
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        MinWidth="450" MinHeight="350">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="Black" Offset="0.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Reported Issues"
                   FontWeight="Bold"
                   FontSize="20"
                   Foreground="#1565C0"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15">
            <TextBlock.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2"/>
            </TextBlock.Effect>
        </TextBlock>

        <Border CornerRadius="10" BorderBrush="#BBDEFB" BorderThickness="2" Grid.Row="1">
            <ListBox x:Name="IssuesListBox"
                     Padding="10"
                     Background="White"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ListBox.Effect>
                    <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2"/>
                </ListBox.Effect>
            </ListBox>
        </Border>
    </Grid>
</Window>
