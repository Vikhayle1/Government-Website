<Window x:Class="PROG7312_POEPART1_ST10083666.LocalEventsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Local Events and Announcements" Height="500" Width="850" Background="#FF194586">
    <Window.Resources>
        <Style x:Key="TextBlockStyle1" TargetType="{x:Type TextBlock}">
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="TextTrimming" Value="None"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

       
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Top">
            <TextBox x:Name="txtSearch" Width="200" Height="35" Margin="0,0,10,0" Padding="5"
                     VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14" 
                     TextChanged="txtSearch_TextChanged" Background="#FFFFFF" BorderBrush="#D3D3D3" 
                     BorderThickness="1"/>

            <TextBlock Style="{DynamicResource TextBlockStyle1}" x:Name="txtSearchPlaceholder"  Text="Search Events..." Width="200" Margin="-210,0,0,0"
                       VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Gray" IsHitTestVisible="False"
                       Visibility="Visible" Height="35" Padding="5" FontSize="14"/>

            <ComboBox x:Name="comboBoxCategory" Width="150" Height="35" Margin="10,0" Padding="5"
                      VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14" 
                      Background="#FFFFFF" BorderBrush="#D3D3D3" BorderThickness="1"/>

            <DatePicker x:Name="datePickerEvent" Width="150" Height="35" Margin="10,0" Padding="5"
                        VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14" 
                        Background="#FFFFFF" BorderBrush="#D3D3D3" BorderThickness="1"/>

            <Button Content="Search" Width="100" Height="35" Margin="10,0" Padding="5"
                    VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14" Click="SearchButton_Click"
                    Background="#FF5CB862" Foreground="White" BorderBrush="#007ACC" BorderThickness="1"/>

<Button Content="Back" Width="100" Height="35" Margin="10,0" Padding="5"
VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14" Click="BackButton_Click"
Background="#FF5CB862" Foreground="White" BorderBrush="#007ACC" BorderThickness="1"/>
        </StackPanel>

       
        <Border Grid.Row="1" BorderBrush="#D3D3D3" BorderThickness="1" Background="#FFFFFF">
            <DataGrid x:Name="dataGridEvents" Margin="0" AutoGenerateColumns="False" GridLinesVisibility="None"
                      AlternatingRowBackground="#F0F0F0" RowBackground="White" CanUserAddRows="False" 
                      HeadersVisibility="Column" BorderThickness="0" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Event Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

       
        <StackPanel Grid.Row="2" Margin="0,15,0,0">
            <TextBlock Text="Recommended Events:" FontWeight="Bold" FontSize="16" Margin="0,0,0,5" Foreground="White"/>
            <Border Background="#F0F0F0" Padding="5" BorderBrush="#D3D3D3" BorderThickness="1">
                <ListBox x:Name="listBoxRecommendations" Background="#FFFFFF" BorderThickness="0"
                         Margin="0" Padding="5" FontSize="14">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding Category}" Foreground="Gray" FontSize="12"/>
                                <TextBlock Text="{Binding Date, StringFormat=d}" Foreground="Gray" FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </StackPanel>
    </Grid>
</Window>
