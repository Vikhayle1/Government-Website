<Window x:Class="PROG7312_POEPART1_ST10083666.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Municipality Reality" Height="450" Width="800">

    <Window.Resources>
        <LinearGradientBrush x:Key="GradientButtonBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4CAF50" Offset="0.0"/>
            <GradientStop Color="#2E7D32" Offset="1.0"/>
        </LinearGradientBrush>

        <Style x:Key="ButtonHoverStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="10" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="{StaticResource GradientButtonBackground}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Direction="320" ShadowDepth="5" Opacity="0.4" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#66BB6A" Offset="0.0"/>
                                <GradientStop Color="#388E3C" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="15" Direction="320" ShadowDepth="8" Opacity="0.7" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/flag.jpg"/>
        </Grid.Background>

         <TextBlock Text="Welcome to Municipality Reality"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="137,0,0,0"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"/>

         <Button Content="Report Issues"
                HorizontalAlignment="Left"
                Height="45"
                Width="300"
                Margin="200,90,0,0"
                VerticalAlignment="Top"
                Click="Button_Click_1"
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                Cursor="Hand"
                Background="{StaticResource GradientButtonBackground}"
                BorderBrush="Transparent"
                Style="{StaticResource ButtonHoverStyle}"/>

        <Button Content="Local Events and Announcements"
                HorizontalAlignment="Left"
                Height="45"
                Width="300"
                Margin="200,165,0,0"
                VerticalAlignment="Top"
                Click="Btn_localeventandannounce"
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                Cursor="Hand"
                Background="{StaticResource GradientButtonBackground}"
                BorderBrush="Transparent"
                Style="{StaticResource ButtonHoverStyle}"/>

        <Button Content="Service Request Status"
                Click="Button_Click_2"
                HorizontalAlignment="Left"
                Height="45"
                Width="300"
                Margin="200,240,0,0"
                VerticalAlignment="Top"
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                Cursor="Hand"
                Background="{StaticResource GradientButtonBackground}"
                BorderBrush="Transparent"
                Style="{StaticResource ButtonHoverStyle}"/>
    </Grid>
</Window>
