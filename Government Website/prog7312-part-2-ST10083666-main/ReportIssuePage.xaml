<Window x:Class="PROG7312_POEPART1_ST10083666.ReportIssuePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG7312_POEPART1_ST10083666"
        WindowState="Normal"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Report Page" Height="500" Width="800" Background="LightGray">

    <Grid Margin="1">
        <Grid.Background>
            <ImageBrush ImageSource="/flag.jpg"/>
        </Grid.Background>


        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,30,0,0" Width="600">

            <Label Content="Enter location:" FontSize="14" Margin="0,0,0,5" Foreground="White"/>
            <TextBox x:Name="LocationInput" Width="600" Height="30" Padding="10,5" FontSize="14" 
                     BorderBrush="#FFBDBDBD" BorderThickness="1" />

            <Label Content="Select Category of Complaints:" FontSize="14" Margin="0,20,0,5" Foreground="White"/>
            <ComboBox x:Name="CategorySelection" Width="600" Height="30" FontSize="14">
                <ComboBoxItem Content="Sanitation"/>
                <ComboBoxItem Content="Roads"/>
                <ComboBoxItem Content="Electricity"/>
                <ComboBoxItem Content="Water"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>

            <Label Content="Enter Description:" FontSize="14" Margin="0,20,0,5" Foreground="White"/>
            <RichTextBox x:Name="DescriptionBox" Width="600" Height="100" Padding="10" FontSize="14" 
                         VerticalScrollBarVisibility="Auto" BorderBrush="#FFBDBDBD" BorderThickness="1"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" 
                    Margin="0,424,0,0" Width="676" Height="40">
            <Button Content="Attach Media" x:Name="media" Width="150" Height="40" FontSize="14" 
                    Background="#3B5998" Foreground="White" Margin="10,0,10,0" Padding="5" BorderBrush="#3B5998" Click="AttachMedia_Click"/>
            <Button x:Name="SubmitButton" Content="Progress: 0%" Width="150" Height="40" FontSize="14" 
                    IsEnabled="False" Background="Gray" Foreground="White" Margin="10,0,10,0" Padding="5" BorderBrush="Gray" Click="Submit_Click"/>
            <Button Content="Back to Main Menu" Width="150" Height="40" FontSize="14" 
                    Background="#3B5998" Foreground="White" Margin="10,0,10,0" Padding="5" BorderBrush="#3B5998" Click="BackToMainMenu_Click"/>
            <Button Content="Show Reported Issues" 
                Width="151" Height="40" FontSize="14" 
                Background="#3B5998" Foreground="White" Padding="5" BorderBrush="#3B5998" Click="ShowReportedIssues_Click"/>
        </StackPanel>
    </Grid>
</Window>
